<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Customer.ShowCustomerProfile">

    <!-- TODO: Update blank fragment layout -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroudColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/showCustomerprofile_image"
            android:layout_width="188dp"
            android:layout_height="166dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/arshad"
            android:visibility="visible"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />
              <Button
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="edit pic"
                  android:background="@color/colorPrimary"
                  android:id="@+id/editProfilePic"
                  android:layout_marginBottom="10dp"
                  android:layout_gravity="bottom"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"

        android:text="customerName"/>

    <TextView
        android:id="@+id/CProfileName"
        android:layout_width="340dp"
        android:layout_height="35dp"
        android:layout_marginLeft="30dp"
        android:backgroundTint="@color/textColor"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textColor="@color/textColor"
        android:textColorHint="@color/textColor" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="customerMobileNumber"/>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/CProfilePhone"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_marginLeft="30dp"
        android:backgroundTint="@color/textColor"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="phone"
        android:textColor="@color/textColor"
        android:textColorHint="@color/textColor" />
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/editProfilePhone"
        android:layout_height="wrap_content"
        android:text="Edit "
        android:gravity="start"
        android:drawableLeft="@drawable/edit"
        android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/makeCall"
            android:layout_height="wrap_content"
            android:text="call "
            android:gravity="start"
            android:drawableLeft="@drawable/call"
            android:layout_marginLeft="10dp"/>



</LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="customerCnic"/>

    <TextView
        android:id="@+id/CProfileCnic"
        android:layout_width="340dp"
        android:layout_height="35dp"
        android:layout_marginLeft="30dp"
        android:backgroundTint="@color/textColor"
        android:ems="10"
        android:hint="Cnic"
        android:inputType="text"
        android:textColor="@color/textColor"
        android:textColorHint="@color/textColor" />


</LinearLayout>

</FrameLayout>