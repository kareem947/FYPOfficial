<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_driver_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Driver.Setting"
    android:background="@color/backgroudColor"

    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/showprofile_image"
            android:layout_width="188dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="110dp"
            android:layout_height="166dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/arshad"
            android:visibility="visible"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="edit profile pic"
            android:onClick="editProfilePic"
            android:layout_marginBottom="30dp"
            android:layout_gravity="bottom"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Name"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        />

    <EditText
        android:layout_width="340dp"
        android:layout_height="44dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/dSettingName"
        android:layout_marginLeft="30dp"
        android:hint="Name"
        android:backgroundTint="@color/textColor"
        android:textColor="@color/textColor"
        android:textColorHint="@color/textColor" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="phoneNumber"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        />

    <EditText
        android:layout_width="340dp"
        android:layout_height="44dp"
        android:inputType="phone"
        android:ems="10"
        android:layout_marginLeft="30dp"

        android:id="@+id/dSettingPhone"
        android:hint="Phone Number"
        android:backgroundTint="@color/textColor"
        android:textColor="@color/textColor"
        android:textColorHint="@color/textColor" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Licence"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        />


    <EditText
        android:layout_width="340dp"
        android:layout_height="44dp"
        android:ems="10"
        android:layout_marginLeft="30dp"
        android:id="@+id/dSettingLicense"
        android:backgroundTint="@color/textColor"
        android:textColor="@color/textColor"
        android:textColorHint="@color/textColor"
        android:hint="Driver's Licence"
        android:inputType="number" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Cnic"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        />

    <EditText
        android:id="@+id/dSettingCnic"
        android:layout_width="340dp"
        android:layout_height="44dp"
        android:layout_marginLeft="30dp"
        android:backgroundTint="@color/textColor"
        android:ems="10"
        android:hint="Cnic"
        android:inputType="text"
        android:textColor="@color/textColor"
        android:textColorHint="@color/textColor" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Vehicle Type"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        />

    <RadioGroup
        android:layout_width="340dp"
        android:id="@+id/radioGroup2"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"

        android:layout_height="wrap_content"
       >

        <RadioButton
            android:id="@+id/dsettingSmallPickup"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:drawableStart="@drawable/small"
            android:layout_marginTop="2dp"
            android:buttonTint="@color/textColor"
            android:text="Small Pickup"
            android:textColor="@color/textColor" />

        <RadioButton
            android:id="@+id/dsettingMediumTruck"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:drawableStart="@drawable/medium"
            android:layout_marginTop="2dp"

            android:buttonTint="@color/textColor"
            android:text="medium truck"
            android:textColor="@color/textColor" />

        <RadioButton
            android:id="@+id/dsettingLargeTruck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/large"
            android:layout_weight="1"
            android:layout_marginTop="2dp"

            android:buttonTint="@color/textColor"
            android:text="Large Truck"
            android:textColor="@color/textColor" />

    </RadioGroup>

    <Button
        android:id="@+id/saveProfile"

        android:layout_width="340dp"
        android:layout_height="49dp"
        android:layout_marginLeft="30dp"
        android:onClick="saveProfile"
        android:layout_marginBottom="20dp"
        android:background="@color/buttonColor"
        android:textColor="@color/textColor"
        android:text="Save" />


</LinearLayout>

</ScrollView>