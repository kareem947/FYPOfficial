<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Company.ShowCompanyAllCustomerDetails">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroudColor"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/showCustomerprofile_image"
                android:layout_width="match_parent"
                android:layout_height="327dp"
                android:layout_gravity="center"

                android:src="@drawable/arshad"
                android:visibility="visible"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"

            android:text="Name" />

        <TextView
            android:id="@+id/CProfileName"
            android:layout_width="340dp"
            android:layout_height="35dp"
            android:layout_marginLeft="30dp"
            android:backgroundTint="@color/textColor"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:textColor="@color/textColor"
            android:textColorHint="@color/textColor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="MobileNumber" />


        <TextView
            android:id="@+id/CProfilePhone"
            android:layout_width="340dp"
            android:layout_height="35dp"
            android:layout_marginLeft="30dp"
            android:backgroundTint="@color/textColor"
            android:ems="10"
            android:hint="Phone Number"
            android:inputType="phone"
            android:textColor="@color/textColor"
            android:textColorHint="@color/textColor" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Cnic" />

        <TextView
            android:id="@+id/CProfileCnic"
            android:layout_width="340dp"
            android:layout_height="35dp"
            android:layout_marginLeft="30dp"
            android:backgroundTint="@color/textColor"
            android:ems="10"
            android:hint="Cnic"
            android:inputType="text"
            android:textColor="@color/textColor"
            android:textColorHint="@color/textColor" />


    </LinearLayout>

</FrameLayout>